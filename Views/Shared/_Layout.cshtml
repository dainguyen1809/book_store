<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="author" content="Untree.co">
	<link rel="shortcut icon" href="favicon.png">

	<meta name="description" content="" />
	<meta name="keywords" content="bootstrap, bootstrap5" />

	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;600;700&display=swap" rel="stylesheet">


	<link rel="stylesheet" href="fonts/icomoon/style.css">
	<link rel="stylesheet" href="fonts/flaticon/font/flaticon.css">

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

	<link rel="stylesheet" href="~/Assets/css/tiny-slider.css">
	<link rel="stylesheet" href="~/Assets/css/aos.css">
	<link rel="stylesheet" href="~/Assets/css/glightbox.min.css">
	<link rel="stylesheet" href="~/Assets/css/style.css">

	<link rel="stylesheet" href="~/Assets/css/flatpickr.min.css">


	<title>Book Store</title>
</head>

<body>

	<div class="site-mobile-menu site-navbar-target">
		<div class="site-mobile-menu-header">
			<div class="site-mobile-menu-close">
				<span class="icofont-close js-menu-toggle"></span>
			</div>
		</div>
		<div class="site-mobile-menu-body"></div>
	</div>

	<nav class="site-nav">
		<div class="container">
			<div class="menu-bg-wrap">
				<div class="site-navigation">
					<div class="row g-0 align-items-center">
						<div class="col-2">
							<a asp-controller="Home" asp-action="Index" class="logo m-0 float-start">Book Store<span class="text-primary">.</span></a>
						</div>
						<div class="col-6 text-center">
							<form action="#" class="search-form d-inline-block d-lg-none">
								<input type="text" class="form-control" placeholder="Search...">
								<i class="bi bi-search"></i>
							</form>

							<ul class="js-clone-nav d-none d-lg-inline-block text-start site-menu mx-auto">
								<li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
								<li><a asp-controller="Blog" asp-action="Index">Blog</a></li>
								<li><a asp-controller="PublicBookAPI" asp-action="Index">Explore</a></li>
								<li><a asp-controller="Cart" asp-action="Index">Cart <i class="bi bi-basket3-fill"></i></a></li>
							</ul>
						</div>
						<div class="col-2 text-end">
							<a  class="burger ms-auto float-end site-menu-toggle js-menu-toggle d-inline-block d-lg-none light">
								<span></span>
							</a>
							<form action="#" class="search-form d-none d-lg-inline-block">
								<input type="text" class="form-control" placeholder="Search...">
								<span class="bi-search"></span>
							</form>
						</div>
						<div class="col-2 text-end">
							<div class="dropdown">
								<a class="btn btn-primary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
									Account  <i class="bi bi-person-circle"></i>
								</a>
								<ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
									@if (User.Identity?.IsAuthenticated ?? false )
									{
										<li><p class="dropdown-item">Xin Chào @User.Identity.Name</p></li>
										<li><a asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Context.Request.Path" class="dropdown-item">Đăng Xuất</a></li>

									}
									else
									{
										<li><a asp-controller="Account" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Path" class="dropdown-item">Đăng nhập</a></li>
										<li><a asp-controller="Account" asp-action="Register" class="dropdown-item">Đăng ký</a></li>
									}
									<li><a asp-area="Admin" asp-controller="Home" asp-action="Index" asp-route-returnUrl="@Context.Request.Path" class="dropdown-item">Administration</a></li>

								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</nav>

	<!-- Start retroy layout blog posts -->
	
	@RenderBody()

	@Html.Partial("_FooterPartial")
    <!-- Preloader -->


    <script src="~/Assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Assets/js/tiny-slider.js"></script>

    <script src="~/Assets/js/flatpickr.min.js"></script>


    <script src="~/Assets/js/aos.js"></script>
    <script src="~/Assets/js/glightbox.min.js"></script>
    <script src="~/Assets/js/navbar.js"></script>
    <script src="~/Assets/js/counter.js"></script>
    <script src="~/Assets/js/custom.js"></script>

    
  </body>
  </html>

