@model IEnumerable<Book>

@{
	var listRand = new List<Book_Store.Models.Book>();
	if (Model != null)
	{
		var rand = new Random();
		listRand = Model.OrderBy(x => rand.Next()).Take(3).ToList();
	}

	@foreach (var obj in listRand)
	{
		<li>
			<a asp-controller="Books" asp-action="Details" asp-route-Id="@obj.Id">
				<img src="~/Images/@obj.UrlImgCover" alt="Image placeholder" class="me-4 rounded">
				<div class="text">
					<h4>@obj.BookName</h4>
					<h4>@obj.Description</h4>
					<div class="post-meta">
						<span class="mr-2">@obj.DateUpdate.ToString("dd/MM/yyyy")</span>
					</div>
				</div>
			</a>
		</li>
	}
}