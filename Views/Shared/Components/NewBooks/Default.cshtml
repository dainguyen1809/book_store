@model IEnumerable<Book>

@{
	var randList = new List<Book>();
	if (Model != null)
	{
		var rand = new Random();
		randList = Model.OrderBy(b => rand.Next()).Take(4).ToList();
	}

	@foreach(var obj in randList)
	{
		<div class="col-md-6 col-lg-3">
			<div class="blog-entry">
				<a asp-controller="Books" asp-action="Details" asp-route-Id="@obj.Id" class="img-link">
					<img src="~/Images/@obj.UrlImgCover" alt="Image" class="img-fluid" style="width: 100%; height: 300px;">
				</a>
				<br>
				<span class="date">@obj.DateUpdate.ToString("dd/MM/yyyy")</span>
				<h2><a asp-controller="Books" asp-action="Details" asp-route-Id="@obj.Id">@obj.BookName</a></h2>
				<p>@obj.Description</p>
				<p><a href="#" class="read-more">Continue Reading</a></p>
			</div>
		</div>
	}
}