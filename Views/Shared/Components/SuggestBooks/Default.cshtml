@model IEnumerable<Book>

@{
	var randList = new List<Book>();
	if(Model != null)
	{
		var rand = new Random();
		randList = Model.OrderBy(b => rand.Next()).Take(6).ToList();
	}

	@foreach (var obj in randList)
	{
		<div class="col-4">
			<div class="blog-entry">
				<a asp-controller="Books" asp-action="Details" asp-route-Id="@obj.Id" class="img-link">
					<img src="~/Images/@obj.UrlImgCover" alt="Image" class="img-fluid" style="width: 100%; height: 220px;">
				</a>
				<br>
				<span class="date">@obj.DateUpdate.ToString("dd/MM/yyyy")</span>
				<h4>@obj.BookName</h4>
				<p>@obj.Description</p>
				<p><a asp-controller="Books" asp-action="Details" asp-route-Id="@obj.Id" class="btn btn-sm btn-outline-primary">Read More</a></p>
			</div>
		</div>
    }
}